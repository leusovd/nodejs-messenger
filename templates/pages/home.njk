{% extends "layouts/main.njk" %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {% if user.email %}
                    {% include "partials/messenger.njk" %}
                {% else %}
                    <h1 class="descriptor">
                        Welcome to <span class="descriptor_logo">mSgr</span> app!
                    </h1>
                    <p class="sub-text">Fast, secure and easy to use messenger.</p>
                    <p>Go to: <a href="/login" class="login-page-link">Login Page</a></p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}